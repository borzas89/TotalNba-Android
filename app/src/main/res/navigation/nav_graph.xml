<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ListFragment">

    <fragment
        android:id="@+id/ListFragment"
        android:name="example.com.totalnba.ui.prediction.ModernPredictionListFragment"
        android:label="NBA Predictions"
        tools:layout="@layout/fragment_prediction_list">

        <action
            android:id="@+id/action_ListFragment_to_ResultFragment"
            app:destination="@id/ResultFragment"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>

        <action
            android:id="@+id/action_ListFragment_to_PlayerSearchFragment"
            app:destination="@id/PlayerSearchFragment"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>

        <action
            android:id="@+id/action_ListFragment_to_StandingsFragment"
            app:destination="@id/StandingsFragment"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>
    </fragment>
    <fragment
        android:id="@+id/ResultFragment"
        android:name="example.com.totalnba.ui.result.ResultFragment"
        android:label="Result Fragment"
        tools:layout="@layout/fragment_result">

        <argument
            android:name="teamName"
            app:argType="string" />

        <argument
            android:name="opponentName"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="" />

        <action
            android:id="@+id/action_ResultFragment_to_ListFragment"
            app:destination="@id/ListFragment" />
    </fragment>

    <fragment
        android:id="@+id/PlayerSearchFragment"
        android:name="example.com.totalnba.ui.player.PlayerSearchFragment"
        android:label="Player Search Fragment"
        tools:layout="@layout/fragment_player_search">
    </fragment>

    <fragment
        android:id="@+id/StandingsFragment"
        android:name="example.com.totalnba.ui.standings.StandingsFragment"
        android:label="NBA Standings"
        tools:layout="@layout/fragment_standings">
    </fragment>

    <fragment
        android:id="@+id/SettingsFragment"
        android:name="example.com.totalnba.ui.settings.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_SettingsFragment_to_TotalStatsWebViewFragment"
            app:destination="@id/TotalStatsWebViewFragment"
            app:popEnterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out"/>
    </fragment>

    <fragment
        android:id="@+id/TotalStatsWebViewFragment"
        android:name="example.com.totalnba.ui.webview.TotalStatsWebViewFragment"
        android:label="TotalStats"
        tools:layout="@layout/fragment_webview">
    </fragment>
</navigation>